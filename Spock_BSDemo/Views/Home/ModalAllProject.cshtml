                                        $("#codeSumof").toggle();
                                        if ($("#btnToggleCodeSumof").text() == "Show Code")
                                        {
                                            $("#btnToggleCodeSumof").text("Hide Code");
                                        }
                                        else {
                                            $("#btnToggleCodeSumof").text("Show Code");
                                        }
                                    });
      
